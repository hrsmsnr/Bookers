<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
    <thead>
        <th>Title</th>
        <th>Body</th>
        <th colspan = "3"></th>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show", book_path(book.id) %></td>
                <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                <td>
                    <%= link_to "Destroy", book_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<h2>New book</h2>


<%= form_with model: @books,url: '/books',method: :post, class:"new_book", id:"new_book" do |f| %>

    <div id="error_explanation">
        <% if @book.errors.any? %>
          <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
    </div>

    <div class="field">
        <%= f.label :Title, class:"title_text" %>
        <%= f.text_field :title, class:"title_text_field" %>
    </div>
    <div class="field">
        <%= f.label :Body, class:"body_text" %>
        <%= f.text_area :body, class:"body_text_field" %>
    </div>
    <div class="action">
        <%= f.submit 'Create Book' %>
    </div>
<% end %>